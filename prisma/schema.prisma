generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── NextAuth Models ───

model User {
  id                      String    @id @default(cuid())
  name                    String?
  email                   String    @unique
  emailVerified           DateTime?
  image                   String?
  encryptedOpenAiKey      String?   @db.Text
  encryptedXClientId      String?   @db.Text
  encryptedXClientSecret  String?   @db.Text
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  memberships   WorkspaceMember[]
  comments      Comment[]
  reviews       PostReview[]
  notifications Notification[]
  activityLogs  ActivityLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Workspace Models ───

enum WorkspaceRole {
  OWNER
  EDITOR
  VIEWER
}

model Workspace {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members      WorkspaceMember[]
  invites      WorkspaceInvite[]
  xAccounts    XAccount[]
  posts        Post[]
  activityLogs ActivityLog[]
}

model WorkspaceMember {
  id          String        @id @default(cuid())
  workspaceId String
  userId      String
  role        WorkspaceRole @default(EDITOR)
  createdAt   DateTime      @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
}

model WorkspaceInvite {
  id          String        @id @default(cuid())
  workspaceId String
  code        String        @unique
  role        WorkspaceRole @default(EDITOR)
  expiresAt   DateTime
  createdAt   DateTime      @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
}

// ─── X (Twitter) Account ───

model XAccount {
  id                      String   @id @default(cuid())
  workspaceId             String
  xUserId                 String   @unique
  username                String
  displayName             String
  profileImageUrl         String?
  encryptedAccessToken    String   @db.Text
  encryptedRefreshToken   String   @db.Text
  encryptedClientId       String?  @db.Text
  encryptedClientSecret   String?  @db.Text
  tokenExpiresAt          DateTime?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  posts     Post[]
}

// ─── Post Models ───

enum PostStatus {
  DRAFT
  IN_REVIEW
  SCHEDULED
  PUBLISHING
  PUBLISHED
  FAILED
}

enum MediaType {
  IMAGE
  VIDEO
  GIF
}

model Post {
  id           String     @id @default(cuid())
  workspaceId  String
  xAccountId   String?
  status       PostStatus @default(DRAFT)
  scheduledAt  DateTime?
  publishedAt  DateTime?
  pollDuration Int?
  retryCount   Int        @default(0)
  error        String?    @db.Text
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  workspace   Workspace       @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  xAccount    XAccount?       @relation(fields: [xAccountId], references: [id], onDelete: SetNull)
  threadItems ThreadItem[]
  comments    Comment[]
  reviews     PostReview[]
  analytics   PostAnalytics?
  notifications Notification[]

  @@index([status, scheduledAt])
  @@index([workspaceId, status])
}

model ThreadItem {
  id       String @id @default(cuid())
  postId   String
  position Int
  text     String @db.Text
  tweetId  String?

  post        Post         @relation(fields: [postId], references: [id], onDelete: Cascade)
  media       PostMedia[]
  pollOptions PollOption[]

  @@unique([postId, position])
}

model PostMedia {
  id           String    @id @default(cuid())
  threadItemId String
  url          String
  altText      String?
  position     Int
  mediaType    MediaType @default(IMAGE)

  threadItem ThreadItem @relation(fields: [threadItemId], references: [id], onDelete: Cascade)

  @@unique([threadItemId, position])
}

model PollOption {
  id           String @id @default(cuid())
  threadItemId String
  label        String
  position     Int

  threadItem ThreadItem @relation(fields: [threadItemId], references: [id], onDelete: Cascade)

  @@unique([threadItemId, position])
}

// ─── Collaboration Models ───

model Comment {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  text      String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([postId, createdAt])
}

enum ReviewStatus {
  PENDING
  APPROVED
  CHANGES_REQUESTED
}

model PostReview {
  id        String       @id @default(cuid())
  postId    String
  userId    String
  status    ReviewStatus
  note      String?      @db.Text
  createdAt DateTime     @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([postId, createdAt])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  body      String   @db.Text
  postId    String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post? @relation(fields: [postId], references: [id], onDelete: SetNull)

  @@index([userId, read, createdAt])
}

model ActivityLog {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String
  action      String
  details     String?  @db.Text
  postId      String?
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId, createdAt])
}

// ─── Analytics ───

model PostAnalytics {
  id          String   @id @default(cuid())
  postId      String   @unique
  impressions Int      @default(0)
  likes       Int      @default(0)
  retweets    Int      @default(0)
  replies     Int      @default(0)
  quotes      Int      @default(0)
  bookmarks   Int      @default(0)
  fetchedAt   DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
}
